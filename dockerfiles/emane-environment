# What image do we start from
FROM ubuntu:18.04

RUN apt-get update
RUN apt-get install -y build-essential curl apt-utils wget unzip
RUN apt-get install -y nano
RUN apt-get install -y vim

RUN apt-get install -y python3-pip
RUN apt-get install -y python3

RUN apt install -y git

# Emane requirnments 
ENV DEBIAN_FRONTEND=noninteractive
RUN apt-get update
RUN apt-get install -y --fix-missing lxc bridge-utils mgen fping gpsd gpsd-clients \
iperf multitail olsrd openssh-server python-tk python-pmw python-lxml \
python-stdeb build-essential dh-python

RUN git clone https://github.com/adjacentlink/pynodestatviz
RUN cd pynodestatviz
RUN ./autogen.sh && ./configure && make deb
RUN dpkg -i .debbuild/python-pynodestatviz*.deb

RUN cd ..
RUN git clone https://github.com/adjacentlink/emane-tutorial.git
RUN cd emane-tutorial
RUN make # didnt work